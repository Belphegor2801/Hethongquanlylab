@model ItemDisplay<Notification>
@{
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
    @section Buttons{
        <a target="_blank" href="@Model.Link" class="header-item">Lịch làm việc</a>
        <a asp-action="Account" class="header-item">Tài khoản</a>
        <a asp-action="Procedure" class="header-item">Quy trình</a>
        <a asp-action="Member" class="header-item">Thông tin thành viên</a>
        <a href="#header" class="header-item">Trang chủ</a>
    }

    @section Login{
        <li class="user-info-item">
            <a asp-controller="Login" asp-action="ChangetoChangePassword">Đổi mật khẩu</a>
        </li>
        <li class="user-info-item">
            <a asp-controller="Home">Đăng xuất</a>
        </li>
    }
}


