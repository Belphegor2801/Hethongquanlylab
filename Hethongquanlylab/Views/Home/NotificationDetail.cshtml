@model Notification
@{
    @section Buttons{
        <a class="header-item"></a>
        <a class="header-item"></a>
        <a class="header-item"></a>
        <a asp-action="Index" class="header-item">Trang chủ</a>
    }

    @section Login{
        <li class="user-info-item">
            <a asp-controller="Login">Đăng nhập</a>
        </li>
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/nhanSu&DuAn.css">
    <link rel="stylesheet" href="~/css/quyTrinh.css">
    <link rel="stylesheet" href="~/css/themDuAn.css">
</head>
<body>
    <div class="wrap-back" style="display:flex;">
        <a asp-action="Index"><h2 class="backMainPage"> Trang Chủ</h2></a>
        <p>/</p>
        <a><h2 style="padding-left: 10px;" class="backMainPage"> Thông báo</h2></a>
        <p>/</p>
        <a><h2 style="padding-left: 10px;" class="backMainPage">@Model.Title</h2></a>
    </div>

    <div style="width: 1030px;margin: auto;text-align: right;">
        <h3 style="text-align: center;"> @Model.Title</h3>
    </div>
    <div class="wrap-themDuAn" style="line-height: 50px;">
        <label for="">
            Ngày Đăng: @Model.Date
        </label>

        <div>

        </div>
        <div style="width: 1030px;margin: auto;" id="wrap-noiDung">
            <p>Nội Dung <i style="margin-left: 20px;" class="fa-regular fa-pen-to-square"></i></p>
            <div style="display: block;
                    height: 300px;
                    background-color: #f5f5f5;
                    border: 2px solid #ccc;
                    line-height:34px;"
                 id="text-noiDung">
                @Html.Raw(Model.Content)
            </div>
            <textarea style="display:none; line-height:34px;width:100%; height: 300px;" name="" id="input-noiDung" cols="30" rows="10"></textarea>
        </div>
    </div>

</body>
</html>