@model Hethongquanlylab.Models.Login.ChangePasswordInput
@{
    ViewData["Title"] = "Đổi mặt khẩu";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">

    <title>Đổi mật khẩu</title>
</head>
<body>
    <div id="wrapper">
        <form asp-controller="Login" asp-action="ChangePassword" method="post" id="form-login">
            <h1 class="form-heading">Đổi mật khẩu</h1>

            <div class="form-group">
                <i class="fas fa-key"></i>
                <input name="OldPassword" type="password" class="form-input" placeholder="Mật khẩu cũ" value="@Model.OldPassword">
                <div id="eye" function ="eye-click">
                    <i class="far fa-eye"></i>
                </div>
            </div>

            <div class="form-group">
                <i class="fas fa-key"></i>
                <input name="NewPassword" type="password" class="form-input" placeholder="Mật khẩu mới" value="@Model.NewPassword">
                <div id="eye">
                    <i class="far fa-eye"></i>
                </div>
            </div>

            <div class="form-group">
                <i class="fas fa-key"></i>
                <input name="ReNewPassword" type="password" class="form-input" placeholder="Xác nhận mật khẩu mới" value="@Model.ReNewPassword">
                <div id="eye">
                    <i class="far fa-eye"></i>
                </div>
            </div>

            <div style="color:#f00">@Html.Raw(TempData["msg"])</div>

            <input asp-action="ChangePassword" class="form-submit" type="submit" value="Đổi mật khẩu" style="margin-top: 15px;">
            <a asp-action="ChangeToLoginIndex" class="form-submit" style="margin-top: 15px;">Trở Về</a>
        </form>

    </div>

</body>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="~/js/openPassword.js"></script>
</html>

