@model List<String>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @section Buttons{
        @if (Model[0] == "Ban Nhân Sự")
        {
            <a class="header-item"></a>
            <a asp-action="Procedure" class="header-item">Quy trình</a>
            <a asp-action="Index" class="header-item">Trang chủ</a>
        }
        else if (Model[0] == "Ban Đào Tạo")
        {
            <a asp-action="Notification" class="header-item">Thông báo</a>
            <a asp-action="Project" class="header-item">Dự án</a>
            <a asp-action="Training" class="header-item">Bài đào tạo</a>
            <a asp-action="Procedure" class="header-item">Quy trình</a>
            <a asp-action="Index" class="header-item">Trang chủ</a>
        }
        else
        {
            <a class="header-item"></a>
            <a asp-action="Procedure" class="header-item">Quy trình</a>
            <a asp-action="Index" class="header-item">Trang chủ</a>
        }

    }

    @section Login{
        <li class="user-info-item">
            <a asp-controller="Login" asp-action="ChangetoChangePassword">Đổi mật khẩu</a>
        </li>
        <li class="user-info-item">
            <a asp-controller="Home" asp-action="Index">Đăng xuất</a>
        </li>
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/nhanSu&DuAn.css">
</head>
<body>
    @RenderBody()
    <div class="wrap-back" style="display:flex;">
        <a asp-action="Index"><h2 class="backMainPage"> Trang Chủ</h2></a>
        <p>/</p>
        <a asp-action="Member"><h2 style="padding-left: 10px;" class="backMainPage"> Nhân Sự</h2></a>
        <p>/</p>
        <a asp-action="AddMember"><h2 style="padding-left: 10px;" class="backMainPage"> Thêm nhân sự</h2></a>
    </div>

    <style>
        .form-frame {
            display: flex;
            border-radius: 24px !important;
            padding: 30px 30px 40px;
            background-color: #fff;
        }

        .nutan {
            height: 52px;
            width: 132px;
            background-color: #edcd1f;
            border-radius: 12px;
        }

        .form-group {
            display: flex;
            border-bottom: 1px solid #fff;
            margin-top: 15px;
            margin-bottom: 20px;
            display: flex;
            word-break: break-all;
        }

        .form-control {
            height: 30px;
        }
    </style>

    <div style="min-width: 60%; height: 100%; top: 120px;" class="form-frame">
        <div class="avt" style="text-align: center; width: 45%; margin-right: 50px; border: 1px #ffd800 solid;">
            <div style="padding-top: 20px; padding-bottom: 30px; width: 85%; height: 85%; margin: auto;">
                <img style="border: 1px #ffd800 solid; width: 100%; height: 100%;" src="~/img/avt/@Model[1]" alt="">
            </div>

            <form asp-action="UploadAvt" method="post" enctype="multipart/form-data">
                <input name="file" type="file" required />
                <button type="submit" class="nutan">Upload ảnh</button>
            </form>
        </div>

        <style>
            table tr:nth-child(odd) {
                background-color: white;
            }

            table tr:nth-child(even) {
                background-color: white;
            }

            table tr:nth-child(1) {
                background-color: white;
            }

            table td:nth-child(1) {
                color: #edcd1f;
                font-size: 20px;
            }
        </style>

        <div style="width: 60%;">
            <form asp-action="AddMember" method="post">
                <table style="width: 100%;">
                    <tr style="background-color: #373F51;">
                        <td style="text-align: center; color: #fff;"> THÔNG TIN THÀNH VIÊN</td>
                    </tr>
                </table>
                <table style="width: 100%;">
                    <tr>
                        <td width="25%">
                            LabID
                        </td>
                        <td>
                            <input name="LabID" type="text" class="form-control" placeholder="LabID" id="name" value="" style="width: 100%;" required>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Tên thành viên
                        </td>
                        <td>
                            <input name="Name" type="text" class="form-control" placeholder="Họ và tên" id="name" value="" style="width: 100%;" required>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Giới tính
                        </td>
                        <td>
                            <select style="float: right;" name="Sex" style=" margin-left: 25px;" class="form-control">
                                <option>Nam</option>
                                <option>Nữ</option>
                                <option>Khác</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ngày sinh
                        </td>
                        <td>
                            <input name="Birthday" type="date" id="date" class="form-control" style="float: right; width: 40%;" required>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Thế hệ
                        </td>
                        <td>
                            <select style="float: right;" name="Gen" style=" margin-left: 25px" class="form-control">
                                <option>1,2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5.0</option>
                                <option>5.1</option>
                                <option>5.2</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Đơn vị
                        </td>
                        <td>
                            <input name="Unit" type="text" class="form-control" placeholder="Đơn Vị" id="name" value="" style="width: 100%;">
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Chức vụ
                        </td>
                        <td>
                            <input name="Position" type="text" class="form-control" placeholder="Chức Vụ" id="name" value="" style="width: 100%;">
                        </td>
                    </tr>
                </table>
                <div>
                    <div style="margin-top: 5%;">
                        <button type="submit" style="left: 0%;" class="nutan">+ Lưu</button>
                        <button type="button" style="float: right !important;" onclick="location.href='@Url.Action("Member")'" class="nutan">Quay Lại</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>