<body>
    <div id="header" class="header">
        <div class="header-logo">
            <img src="~/img/logo-trắng.jpg" alt="" class="logo">
            <h3>LAB THẦY SINH</h3>
        </div>
        <div class="header-list">
            <div class="user">
                <i class="fa-solid fa-user"></i>
                <ul class="user-info">
                    @RenderSection("Login")
                </ul>
            </div>

            @RenderSection("Buttons")
        </div>
    </div>

    <div class="layout-content">
        @RenderBody()
    </div>
    

    <!-- phần chân trang -->
